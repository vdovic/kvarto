
<%= link_to 'Back', variants_path %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">

      <div class="panel-heading center">
            <%= image_tag @variant.image.url(:medium) %>
      </div>
      <div class="panel-body">
            
              <%= @variant.kimnatYa %> <%= @variant.typYa %> <%= @variant.mistoYa %> <strong>   МІНЯЮ НА   </strong>       
              <%= @variant.kimnatVin %>               
              <%= @variant.typVin %>
              <%= @variant.mistoVin %>
           
              <br>
            <p>
              <strong>Опис:</strong>
              <%= @variant.description %>
            </p>

            <p><strong>Автор:<%= @variant.user.name if @variant.user %></strong></p>

            <%= link_to edit_variant_path(@variant) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Редагувати
            <% end %>
      </div>
    </div>
  </div>
</div>

